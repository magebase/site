# Terraform Variables Template
# Copy this file to dev.tfvars or prod.tfvars and update with your values
# DO NOT commit files with actual sensitive values

# Environment Configuration
environment = "dev"  # or "prod"

# Domain Configuration
domain_name = "magebase.dev"

# Docker Configuration
docker_image = "magebase/site:latest"

# Infrastructure Configuration
# These values should be set via environment variables in CI/CD pipelines:
# TF_VAR_hcloud_token - Hetzner Cloud API token
# TF_VAR_cloudflare_api_token - Cloudflare API token
# TF_VAR_aws_ses_account_id - AWS account ID for SES
# TF_VAR_database_url - Database connection URL
# TF_VAR_cache_database_url - Cache database connection URL
# TF_VAR_secret_key_base - Rails secret key base (32+ characters)
# TF_VAR_ruby_llm_api_key - RubyLLM API key
# TF_VAR_aws_ses_access_key_id - AWS SES access key ID
# TF_VAR_aws_ses_secret_access_key - AWS SES secret access key
# TF_VAR_stripe_api_key - Stripe API key
# TF_VAR_stripe_webhook_secret - Stripe webhook secret

# Example values (DO NOT USE IN PRODUCTION):
# hcloud_token = "your-hetzner-api-token-here"
# cloudflare_api_token = "your-cloudflare-api-token-here"
# aws_ses_account_id = "123456789012"
# database_url = "postgresql://user:password@host:5432/database"
# cache_database_url = "redis://host:6379/0"
# secret_key_base = "your-secret-key-base-here-32-characters-minimum"
# ruby_llm_api_key = "your-ruby-llm-api-key-here"
# aws_ses_access_key_id = "your-ses-access-key-id"
# aws_ses_secret_access_key = "your-ses-secret-access-key"
# stripe_api_key = "sk_test_your-stripe-api-key"
# stripe_webhook_secret = "whsec_your-webhook-secret"
